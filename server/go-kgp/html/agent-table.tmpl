<table class="list">
    <thead>
	<tr>
	    <td>Name</td>
	    <td>Rating (<a href="https://en.wikipedia.org/wiki/Elo_rating_system">ELO</a>)</td>
	    <td>Author</td>
	    <td>Games</td>
	</tr>
    </thead>
    <tbody>
	{{ range .Agents }}
	    <tr>
		<td>
		<a href="/agent/{{ .Id }}">
		{{ with .Name }}
		{{ . }}
		{{ else }}
		<em>Unnamed</em>
		{{ end }}
		</a>
		</td>
		<td>{{ printf "%.f" .Score }}</td>
		<td>{{ with .Author }}{{ . }}{{ else }}<em>anonymous</em>{{ end }}</td>
		<td>{{ .Games }}</td>
	    </tr>
	{{ else }}
	<tr><td colspan="4"><em>No agents in the database</em></td></tr>
	{{ end }}
    </tbody>
</table>

{{ template "pagination.tmpl" .Page }}